<br />
<table class="table" border="1" cellpadding="2" style="width:100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
             <td>
             @Html.ActionLink("View TrackList", "Tracklist", new {artistname=item.ArtistName, albumname=item.ReleaseName, releasedate=item.ReleaseDate, albumid=item.AlbumID }) 
             </td>
        </tr>
    }

</table>